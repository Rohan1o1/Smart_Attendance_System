# Environment Configuration Template
# Copy this file to .env and update the values

#############################################################################
# Application Configuration
#############################################################################

# Application Environment (development, production, test)
NODE_ENV=development

# Server Configuration
PORT=5000
HOST=localhost
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Application Info
APP_NAME=Smart Attendance System
APP_VERSION=1.0.0

#############################################################################
# Database Configuration
#############################################################################

# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/attendance_system

# Database Pool Settings
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2
DB_MAX_IDLE_TIME=30000
DB_CONNECTION_TIMEOUT=10000

#############################################################################
# JWT Configuration
#############################################################################

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

# JWT Expiration
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
JWT_ISSUER=attendance-system
JWT_AUDIENCE=attendance-users

#############################################################################
# Security Configuration
#############################################################################

# Password Hashing
BCRYPT_ROUNDS=12

# Account Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
SESSION_TIMEOUT=86400000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

#############################################################################
# Rate Limiting Configuration
#############################################################################

# Rate Limiting Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_MESSAGE=Too many requests, please try again later
RATE_LIMIT_STANDARD_HEADERS=true
RATE_LIMIT_LEGACY_HEADERS=false

#############################################################################
# File Upload Configuration
#############################################################################

# Upload Settings
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
PROFILE_PICTURE_SIZE=500
THUMBNAIL_SIZE=150

# Allowed File Types
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
ALLOWED_DOCUMENT_TYPES=application/pdf

#############################################################################
# Face Recognition Configuration
#############################################################################

# Face Recognition Features
ENABLE_FACE_RECOGNITION=true
FACE_MIN_CONFIDENCE=0.7
FACE_MAX_DISTANCE=0.4
FACE_MIN_SIZE=160
FACE_MAX_SIZE=1024
FACE_LIVENESS_THRESHOLD=0.5
FACE_MODELS_PATH=./models

#############################################################################
# Location Services Configuration
#############################################################################

# Location Verification Features
ENABLE_LOCATION_VERIFICATION=true
LOCATION_MAX_DISTANCE=100
GPS_ACCURACY_THRESHOLD=50
LOCATION_SPEED_THRESHOLD=100
LOCATION_ALTITUDE_THRESHOLD=10000
LOCATION_TIME_WINDOW=300000

#############################################################################
# Email Configuration
#############################################################################

# Email Service Settings
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@attendance-system.com
EMAIL_REPLY_TO=support@attendance-system.com

# Email Templates
EMAIL_TEMPLATES_PATH=./templates/emails
EMAIL_TEMPLATE_ENGINE=handlebars

#############################################################################
# SMS Configuration (Optional)
#############################################################################

# SMS Service (Twilio)
SMS_SERVICE=twilio
SMS_ACCOUNT_SID=your-twilio-account-sid
SMS_AUTH_TOKEN=your-twilio-auth-token
SMS_FROM_NUMBER=+1234567890

#############################################################################
# Notification Configuration
#############################################################################

# Notification Features
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false

# Push Notifications (VAPID)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@attendance-system.com

#############################################################################
# Logging Configuration
#############################################################################

# Log Settings
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true
LOG_CONSOLE_COLORIZE=true

# Log File Settings
LOG_FILE_PATH=./logs
LOG_FILE_MAX_SIZE=20m
LOG_FILE_MAX_FILES=5
LOG_FILE_DATE_PATTERN=YYYY-MM-DD

#############################################################################
# Cache Configuration (Optional)
#############################################################################

# Cache Settings
CACHE_ENABLED=false
CACHE_TYPE=memory

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_KEY_PREFIX=attendance:

# Cache TTL Settings
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=86400

#############################################################################
# Feature Flags
#############################################################################

# Core Features
FEATURE_REGISTRATION=true
FEATURE_PASSWORD_RESET=true
FEATURE_EMAIL_VERIFICATION=false
FEATURE_TWO_FACTOR_AUTH=false

# Advanced Features
FEATURE_ATTENDANCE_ANALYTICS=true
FEATURE_BULK_OPERATIONS=true
FEATURE_DATA_EXPORT=true
FEATURE_MAINTENANCE_MODE=false

#############################################################################
# Development Configuration
#############################################################################

# Development Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
SEED_DATABASE=false
MOCK_SERVICES=false

#############################################################################
# Production Configuration
#############################################################################

# Production Optimizations
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
HEALTH_CHECK_PATH=/health
METRICS_PATH=/metrics
SHUTDOWN_TIMEOUT=10000

#############################################################################
# External Services (Optional)
#############################################################################

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
AWS_S3_BUCKET=attendance-files

# Google Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# Firebase (Optional for Push Notifications)
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

#############################################################################
# Monitoring and Analytics (Optional)
#############################################################################

# Error Tracking (Sentry)
SENTRY_DSN=your-sentry-dsn

# Analytics
GOOGLE_ANALYTICS_ID=your-ga-id

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your-newrelic-key
NEW_RELIC_APP_NAME=Smart Attendance API
